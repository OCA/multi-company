    <record id="view_account_distribution_tree" model="ir.ui.view">
        <field name="name">account.invoice.line.distribution.tree</field>
        <field name="model">account.invoice.line.distribution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id"/>
                <field name="percent"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">account.move.line.invoice.tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="distribution_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="view_move_line_form_distribution" model="ir.ui.view">
        <field name="name">account.move.line.form.distribution</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="distribution_ids" invisible="1"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="move_line_distribution_form">
        <field name="name">account.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <form string="description">
                <sheet>
                    <group>
                        <field name="distribution_ids" context="{'default_amount': price_subtotal}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_move_form_distribution" model="ir.ui.view">
        <field name="name">account.move.form.distribution</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
<!--             FIXME: while we changed the unit price amount then can't changed the subtotal value so raise unbalanced entry error. -->
            <!-- <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath> -->
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='analytic_tag_ids']" position="after">
                <field name="distribution_ids"/>
                <button name="open_line_view" type="object" icon="fa-list" width="0.1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//form//field[@name='currency_id']" position="after">
                <field name="distribution_ids">
                    <tree string="Distribution" editable="bottom">
                        <field name="company_id"/>
                        <field name="percent"/>
                        <field name="amount"/>
                    </tree>
                </field>
                            
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree//field[@name='tax_tag_ids']" position="after">
                <field name="distribution_ids" invisible="1">
                    <tree string="Distribution">
                        <field name="company_id"/>
                        <field name="percent"/>
                        <field name="amount"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//field[@name='line_ids']/form//field[@name='account_id']" position="after">
                <field name="distribution_ids" invisible="0"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="context">
                    {'default_move_type': context.get('default_move_type'), 'journal_id': journal_id, 'default_partner_id': commercial_partner_id, 'default_currency_id': currency_id or company_currency_id,'default_company_id': company_id}
                </attribute>
            </xpath>
            
        </field>
    </record>
</odoo>
