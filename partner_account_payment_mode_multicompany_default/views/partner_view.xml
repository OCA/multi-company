<?xml version="1.0" encoding="utf-8" ?>
<data>

    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">account_partner_payment.partner_form.inherit</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="account_payment_partner.view_partner_property_form"
        />
        <field name="arch" type="xml">
            <field name="customer_payment_mode_id" position="after">
                <div
                    class="o_form_label"
                    attrs="{'invisible': [('company_id', '!=', False)]}"
                />
                <button
                    name="propagate_multicompany_customer_payment_mode"
                    type="object"
                    attrs="{'invisible': [('company_id', '!=', False)]}"
                    icon="fa-arrow-right"
                    class="btn-link"
                    confirm="Are you sure? This action will propagate this payment mode to all of your selected companies."
                >Propagate customer payment mode to other companies</button>
            </field>
            <field name="supplier_payment_mode_id" position="after">
                <div
                    class="o_form_label"
                    attrs="{'invisible': [('company_id', '!=', False)]}"
                />
                <button
                    name="propagate_multicompany_supplier_payment_mode"
                    type="object"
                    attrs="{'invisible': [('company_id', '!=', False)]}"
                    icon="fa-arrow-right"
                    class="btn-link"
                    confirm="Are you sure? This action will propagate this payment mode to all of your selected companies."
                >Propagate supplier payment mode to other companies</button>
            </field>
        </field>
    </record>
</data>
