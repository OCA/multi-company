<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_category_form_view_multicompany" model="ir.ui.view">
        <field name="name">product.category.form.multicompany</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field
                    name="company_id"
                    options="{'no_open': True, 'no_create': True}"
                    groups="base.group_multi_company"
                />
            </xpath>
        </field>
    </record>
    <record id="product_category_search_view_multicompany" model="ir.ui.view">
        <field name="name">product.category.search.multicompany)</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_search_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="company_id" groups="base.group_multi_company" />
            </xpath>
        </field>
    </record>
    <record id="product_category_tree_view_multicompany" model="ir.ui.view">
        <field name="name">product.category.tree.multicompany)</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="company_id" groups="base.group_multi_company" />
            </xpath>
        </field>
    </record>
</odoo>
