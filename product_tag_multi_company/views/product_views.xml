<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_view_tree">
        <field name="name">product.template.view.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <!-- Remove the multi-company group from the company_id field.
            This is done to allow the check_company domain to be applied in the
            product_tag_ids field. -->
            <field name="company_id" position="attributes">
                <attribute name="groups" />
            </field>
        </field>
    </record>

</odoo>
