<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='default_taxes_setting_container']"
                position="inside"
            >
                <div class="col-12 col-lg-6 o_setting_box" id="tax_man_mapping">
                    <div class="o_setting_left_pane">
                        <field name="group_tax_man_mapping" />
                    </div>
                    <div class="o_setting_right_pane" name="tax_man_mapping">
                        <label for="group_tax_man_mapping" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
