<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_tax_company_map_view_form" model="ir.ui.view">
        <field name="name">account.tax.company.map.form</field>
        <field name="model">account.tax.company.map</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="tax_ids">
                        <tree>
                            <field name="name" />
                            <field name="type_tax_use" />
                            <field name="company_id" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
