<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- user who belongs to this group can read all the companies -->
        <record id="all_company_group" model="res.groups">
            <field name="name">View all companies</field>
        </record>

        <!-- res partner:Customer can be shared amount different companies-->
        <record id="base.res_partner_rule" model="ir.rule">
            <field name="domain_force">['|','|','|',('company_id.child_ids','child_of',[user.company_id.id]),('company_id','child_of',[user.company_id.id]),('company_id','=',False),('company_ids', 'in', user.company_id.id)]</field>
        </record>

        <!-- see all the companies -->
        <record id="all_company_rule" model="ir.rule">
            <field name="name">Read all companies</field>
            <field model="ir.model" name="model_id" ref="base.model_res_company"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('all_company_group'))]"/>
        </record>

        <!-- make this rule not global -->
        <record id="base.res_company_rule" model="ir.rule">
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>
    </data>
</openerp>