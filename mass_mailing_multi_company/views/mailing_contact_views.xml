<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mailing_contact_view_tree_inherit" model="ir.ui.view">
        <field name="name">mailing.contact.view.tree</field>
        <field name="model">mailing.contact</field>
        <field name="inherit_id" ref="mass_mailing.mailing_contact_view_tree" />
        <field name="arch" type="xml">
            <field name="list_ids" position="after">
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
            </field>
        </field>
    </record>

    <record id="mailing_contact_view_form_inherit" model="ir.ui.view">
        <field name="name">mailing.contact.view.form</field>
        <field name="model">mailing.contact</field>
        <field name="inherit_id" ref="mass_mailing.mailing_contact_view_form" />
        <field name="arch" type="xml">
            <field name="message_bounce" position="after">
                <field
                    name="company_id"
                    options="{'no_create': True}"
                    groups="base.group_multi_company"
                />
            </field>
            <field name="list_id" position="after">
                <field name="company_id" invisible="1" />
            </field>
            <field name="list_id" position="attributes">
                <attribute name="domain">
                    ['|',('company_id', '=', company_id),('company_id', '=', False)]
                </attribute>
            </field>
        </field>
    </record>
</odoo>
