<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="purchase_sale_inter_company.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='inter_company_settings']" position='inside'>
                <label for="priority_intercompany_pricelist_id" class="o_light_label" />
                <field name="priority_intercompany_pricelist_id" class="oe_inline" />
            </xpath>
        </field>
    </record>
</odoo>
