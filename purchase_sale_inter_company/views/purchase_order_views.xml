<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- RFQ Search View -->
    <record id="view_purchase_order_filter" model="ir.ui.view">
        <field
            name="name"
        >request.quotation.select - purchase_sale_inter_company</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <filter name="order_date" position="before">
                <filter
                    string="ICT Purchase"
                    name='is_intercompany_po'
                    domain="[('is_intercompany_po','=', True)]"
                />
                <separator />
            </filter>
        </field>
    </record>
    <!-- Purchase Order View -->
    <record id="purchase_order_view_search" model="ir.ui.view">
        <field name="name">purchase.order.search - purchase_sale_inter_company</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search" />
        <field name="arch" type="xml">
            <filter name="order_date" position="before">
                <filter
                    string="ICT Purchase"
                    name='is_intercompany_po'
                    domain="[('is_intercompany_po','=', True)]"
                />
                <separator />
            </filter>
        </field>
    </record>
</odoo>
