<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_general_configuration_purchase_sale_inter_company" model="ir.ui.view">
            <field name="name">base.config.settings.purchase.sale.inter.company</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='multi_company']" position='after'>
                    <div name="module_purchase_sale_inter_company_company_id">
                        <field name="company_id" widget="selection" class="oe_inline"/>
                    </div>
                    <div name="module_purchase_sale_inter_company_set_sale_auto_validation">
                        <field name="sale_auto_validation"/>
                        <label for="sale_auto_validation"/>
                    </div>
                 </xpath>
            </field>
        </record>
    </data>
</openerp>
