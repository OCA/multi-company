<data>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="property_product_pricelist" position="after">
                <div
                    class="o_form_label"
                    attrs="{'invisible': [('company_id', '!=', False)]}"
                />
                <button
                    name="propagate_multicompany_product_pricelist"
                    type="object"
                    attrs="{'invisible': [('company_id', '!=', False)]}"
                    icon="fa-arrow-right"
                    class="btn-link"
                    confirm="Are you sure? This action will propagate this pricelist to all of your selected companies, if they have an account with the same code."
                >Propagate pricelist to other companies</button>
            </field>
        </field>
    </record>

</data>
