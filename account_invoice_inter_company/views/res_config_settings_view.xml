<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='multi_company']//field[@name='module_inter_company_rules']/../../div[2]"
                position="before"
            >
                <div class="o_form_label">Inter Company OCA features</div>
            </xpath>
            <xpath
                expr="//div[@id='multi_company']//field[@name='module_inter_company_rules']/../../div[2]"
                position="inside"
            >
                <div id="company_share_product">
                    <field name="company_share_product" class="oe_inline" />
                    <label
                        string="Common Product Catalog"
                        class="o_light_label"
                        for="company_share_product"
                    />
                </div>
                <div id="intercompany_invoice_user">
                    <label
                        string="Intercompany user for invoices"
                        class="o_light_label"
                        for="intercompany_invoice_user_id"
                    />
                    <field name="intercompany_invoice_user_id" class="oe_inline" />
                </div>
                <span
                    class="fa fa-lg fa-building-o"
                    title="Values set here are company-specific."
                    aria-label="Values set here are company-specific."
                    groups="base.group_multi_company"
                    role="img"
                />
                <div id="inter_company_invoice_validation">
                    <field name="invoice_auto_validation" class="oe_inline" />
                    <label
                        string="Invoice Auto Validation"
                        class="o_light_label"
                        for="invoice_auto_validation"
                    />
                </div>
            </xpath>
            <xpath
                expr="//div[@id='multi_company']//field[@name='module_inter_company_rules']"
                position="attributes"
            >
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath
                expr="//div[@id='multi_company']//label[@for='module_inter_company_rules']"
                position="attributes"
            >
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
