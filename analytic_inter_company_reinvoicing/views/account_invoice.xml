<openerp>
<data>

    <record model="ir.ui.view" id="account_invoice_form_view">
        <field name="name">account.invoice.form (in analytic_inter_company_reinvoicing)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line']//tree/field[@name='account_id']" position="after">
                <field name="reinvoice_analytic_account_id" string="Reinvoice To"
                       domain="[('company_id', '!=', parent.company_id)]"/>
            </xpath>

        </field>
    </record>

</data>
</openerp>
