<odoo>

<record id="wizard_multicompany_easy_creation_view_form" model="ir.ui.view">
    <field name="name">Company easy creation</field>
    <field name="model">account.multicompany.easy.creation.wiz</field>
    <field name="arch" type="xml">
        <form string="Fill company data">
            <field name="step" invisible="1"/>
            <field name="new_company_id" invisible="1"/>
            <group>
                <field name="name" attrs="{'readonly': [('step','!=', 0)]}"/>
            </group>
            <notebook attrs="{'invisible': [('step','!=', 0)]}">
                <page string='Account' name="account">
                    <group string="Currency" groups="base.group_multi_currency">
                        <field name="currency_id"/>
                    </group>
                    <group string="Chart Template">
                        <field name="chart_template_id"/>
                        <field name="accounts_code_digits"/>
                    </group>
                </page>
                <page string="Banks">
                    <field name="bank_ids">
                        <tree editable="bottom">
                            <field name="acc_number"/>
                            <field name="bank_id"/>
                        </tree>
                    </field>
                </page>
                <page string="Users">
                    <field name="user_ids"/>
                </page>
                <page string="Sequences">
                    <field name="sequence_ids"/>
                </page>
            </notebook>
            <group col="1" string="Taxes" attrs="{'invisible': [('step','!=', 1)]}">
                <group string="Smart Search To Set Product Taxes">
                    <field name="smart_search_product_tax"/>
                </group>
                <group string="Update Default Taxes">
                    <field name="update_default_taxes"/>
                </group>
                <group attrs="{'invisible': [('update_default_taxes','=', False)]}">
                    <field name="default_sale_tax_id"
                           domain="[('type_tax_use', '=', 'sale'), ('company_id', '=', new_company_id)]"
                           attrs="{'required': [('force_sale_tax','=', True)]}"/>
                    <field name="force_sale_tax"/>
                    <field name="default_purchase_tax_id"
                           domain="[('type_tax_use', '=', 'purchase'), ('company_id', '=', new_company_id)]"
                           attrs="{'required': [('force_purchase_tax','=', True)]}"/>
                    <field name="force_purchase_tax"/>
                </group>
            </group>
            <group col="1" string="Accounts" attrs="{'invisible': [('step','!=', 2)]}">
                <group string="Smart Search To Set Specific Accounts In Products, Categories, Partners, ...">
                    <field name="smart_search_specific_account"/>
                </group>
                <group string="Smart Search To Set Specific Fiscal Position In Partners">
                    <field name="smart_search_fiscal_position"/>
                </group>
                <group string="Update Default Accounts">
                    <field name="update_default_accounts"/>
                </group>
                <group attrs="{'invisible': [('update_default_accounts','=', False)]}">
                    <field name="account_receivable_id"
                           domain="[('company_id', '=', new_company_id), ('internal_type', '=', 'receivable')]"/>
                    <field name="account_payable_id"
                           domain="[('company_id', '=', new_company_id), ('internal_type', '=', 'payable')]"/>
                    <field name="account_income_categ_id"
                           domain="[('company_id', '=', new_company_id)]"/>
                    <field name="account_expense_categ_id"
                           domain="[('company_id', '=', new_company_id)]"/>
                </group>
            </group>
            <footer>
                <button name="action_accept"
                        type="object"
                        string="Accept"
                        class="oe_highlight"/>
                or
                <button special="cancel"
                        string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<act_window id="wizard_multicompany_easy_creation_action"
            name="Company easy creation"
            res_model="account.multicompany.easy.creation.wiz"
            view_type="form"
            view_mode="form"
            target="new" />

<menuitem id="multicompany_easy_creation_menu"
          name="Company easy creation"
          action="wizard_multicompany_easy_creation_action"
          parent="base.menu_users"
          sequence="180"
          groups="base.group_no_one"/>

</odoo>
