<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="intercompany_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">intercompany.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="intercompany_delivery_sbox"
                >
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Intercompany Operations</span>
                        <span
                            class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            groups="base.group_multi_company"
                        />

                        <div class="text-muted">
                            Create intercompany counterpart stock operations.
                        </div>

                        <div class="content-group">
                            <label
                                string="Creation Mode"
                                for="intercompany_picking_creation_mode"
                                class="col-lg-4 o_light_label"
                            />
                            <field name="intercompany_picking_creation_mode" />
                        </div>

                        <div
                            class="content-group"
                            attrs="{'invisible': [('intercompany_picking_creation_mode', 'in', ['out', False])]}"
                        >
                            <label
                                string="Reception Type"
                                for="intercompany_in_type_id"
                                class="col-lg-4 o_light_label"
                            />
                            <field name="intercompany_in_type_id" />
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('intercompany_picking_creation_mode', 'in', ['in', False])]}"
                        >
                            <label
                                string="Delivery Type"
                                for="intercompany_out_type_id"
                                class="col-lg-4 o_light_label"
                            />
                            <field name="intercompany_out_type_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
