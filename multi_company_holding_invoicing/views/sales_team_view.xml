<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record id="crm_case_section_view_form" model="ir.ui.view">
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sales_team.crm_case_section_view_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="holding_company_id" widget="selection"/>
                    <field name="holding_discount"
                        attrs="{'invisible': [('holding_company_id', '=', False)]}"/>
                    <field name="holding_invoice_generated_by"
                        attrs="{'invisible': [('holding_company_id', '=', False)]}"/>
                    <field name="holding_invoice_group_by"
                        attrs="{'invisible': [('holding_company_id', '=', False)]}"/>
                    <field name="holding_product_id"
                        attrs="{'invisible': [('holding_company_id', '=', False)],
                                'required': [('holding_company_id', '!=', False)]}"/>
                    <field name="holding_royalty_product_id"
                        attrs="{'invisible': [('holding_discount', '=', 0)],
                                'required': [('holding_discount', '!=', 0)]}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
